default_platform(:ios)

platform :ios do
  desc "Build and upload app to TestApp.io"
  lane :beta do
    # ✅ Fetch signing certificates and provisioning profiles
    match(
      type: "adhoc",
      readonly: false,
      app_identifier: "com.benhamid.TestCiApp"
    )

    # ✅ Build the app
    build_app(
      scheme: "TestCiApp",             # تأكد إن الـ scheme ده موجود في Xcode
      export_method: "ad-hoc",         # الصيغة الصحيحة هي "ad-hoc" مش "adhoc"
      export_options: {
        provisioningProfiles: {
          "com.benhamid.TestCiApp" => "match AdHoc com.benhamid.TestCiApp"
        }
      }
    )

    # مسار ملف الـ IPA المبني
    ipa_path = lane_context[SharedValues::IPA_OUTPUT_PATH]

    # ✅ Upload to TestApp.io باستخدام curl
    sh("curl -X POST \"https://api.testapp.io/upload\" " \
       "-H \"Authorization: Bearer #{ENV['TESTAPPIO_API_TOKEN']}\" " \
       "-F \"file=@#{ipa_path}\" " \
       "-F \"release_notes=Uploaded from GitHub Actions 🚀\"")
  end
end
