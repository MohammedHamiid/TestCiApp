default_platform(:ios)

platform :ios do
  desc "Build and upload to TestApp.io"
  lane :beta do
    build_app(
      scheme: "TestCiApp",                   # ✅ Use your scheme name here
      export_method: "development",
      xcargs: "-allowProvisioningUpdates"    # ✅ Enables automatic signing
    )

    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"]
    )
  end
end
