platform :ios do
  desc "Build and upload to TestApp.io"
  lane :beta do
    puts "ğŸ” Creating fastlane/AuthKey.p8 from Jenkins secret..."

    # âœ… Ø£Ù†Ø´Ø¦ Ù…Ø¬Ù„Ø¯ fastlane Ù„Ùˆ Ù…Ø´ Ù…ÙˆØ¬ÙˆØ¯
    sh("mkdir -p fastlane")

    # âœ… Ø§ÙƒØªØ¨ Ù…Ø­ØªÙˆÙ‰ Ù…Ù„Ù Ø§Ù„Ù€ .p8 Ø§Ù„Ù„ÙŠ Ø¬Ø§ÙŠ Ù…Ù† Jenkins
    File.write("fastlane/AuthKey.p8", ENV["APP_STORE_CONNECT_API_KEY"])

    # âœ… Ø§Ø³ØªØ¹Ù…Ù„ Ø§Ù„Ù…ÙØªØ§Ø­
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8"
    )

    # âœ… Ø¨Ø§Ù‚ÙŠ Ø§Ù„Ø®Ø·ÙˆØ§Øª
    match(
      type: "adhoc",
      api_key: api_key,
      git_url: "https://github.com/MohammedHamiid/ios-certificates.git",
      app_identifier: "com.benhamid.TestCiApp",
      readonly: false
    )

    build_app(
      scheme: "TestCiApp",
      export_method: "ad-hoc"
    )

    upload_to_testappio(
      api_token: "0db11f3c-d0d7-4b1c-8c76-8197063b74a5",
      app_id: "9QorGVmE7M"
    )
  end
end
