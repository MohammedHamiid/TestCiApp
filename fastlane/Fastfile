default_platform(:ios)

platform :ios do
  desc "Build and upload app to TestApp.io"
  lane :beta do
    match(
      type: "adhoc",
      readonly: false
    )

    build_app(
      scheme: "TestCiApp",
      export_method: "adhoc"
    )

    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"],
      app_id: "9QorGVmE7M"
    )
  end
end

