default_platform(:ios)

platform :ios do
  desc "Build and upload to TestApp.io"
  lane :beta do
    puts "🔐 Using local AuthKey.p8 file"

    # اكتب الملف AuthKey.p8 من الـ Secret
    File.write("fastlane/AuthKey.p8", ENV["APP_STORE_CONNECT_API_KEY"])

    # إنشاء API Key من المتغيرات البيئية
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8"
    )

    # تحميل الشهادات والبروفايلات باستخدام match
    match(
      type: "adhoc",
      api_key: api_key,
      git_url: "https://github.com/MohammedHamiid/ios-certificates.git",
      app_identifier: ["com.benhamid.TestCiApp"]
    )

    # بناء التطبيق
    build_app(
      scheme: "TestCiApp",
      export_method: "ad-hoc",
      output_directory: "build"
    )

    # رفع التطبيق إلى TestApp.io
    upload_to_testappio(
      api_token: "0db11f3c-d0d7-4b1c-8c76-8197063b74a5", # ← ده اللي إدتهولي
      ipa: "build/TestCiApp.ipa"
    )
  end
end
