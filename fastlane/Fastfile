default_platform(:ios)

platform :ios do
  desc "Build and upload app to TestApp.io without match"
  lane :beta do

    build_app(
      scheme: "TestCiApp",
      export_method: "development", # لازم يكون development مش ad-hoc
      xcargs: "-allowProvisioningUpdates", # يسمح لـ Xcode ينشئ provisioning profile تلقائيًا
    )

    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"],
      app_id: "9QorGVmE7M"
    )
  end
end
