default_platform(:ios)

platform :ios do
  desc "Push to TestApp.io"
  lane :beta do
    puts "🔐 Using local AuthKey.p8 file"

    # إنشاء مجلد fastlane لو مش موجود
    FileUtils.mkdir_p("fastlane")

    # كتابة المفتاح داخل ملف AuthKey.p8 من ENV
    File.write("fastlane/AuthKey.p8", ENV["APP_STORE_CONNECT_API_KEY"])

    # إعداد Apple API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8"
    )

    # تحميل الشهادات من Match
    match(
      type: "adhoc",
      api_key: api_key,
      git_url: "https://github.com/MohammedHamiid/ios-certificates.git",
      app_identifier: ["com.benhamid.TestCiApp"],
      readonly: false
    )

    # بناء التطبيق
    build_app(scheme: "TestCiApp")

    # رفع .ipa على TestApp.io
    upload_to_testappio(
      api_token: "0db11f3c-d0d7-4b1c-8c76-8197063b74a5"
    )
  end
end
