default_platform(:ios)

platform :ios do
  desc "Build and upload to TestApp.io"
  lane :beta do
    build_app(
      scheme: "TestCiApp",
      export_method: "development",
      export_options: {
        signingStyle: "automatic"
      },
      xcargs: "-allowProvisioningUpdates"
    )

    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"]
    )
  end
end
