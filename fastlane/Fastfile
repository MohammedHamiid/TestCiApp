default_platform(:ios)

platform :ios do
  desc "Build and upload app to TestApp.io"
  lane :beta do

    # بناء التطبيق (من غير توقيع يدوي - تأكد إن المشروع مهيأ للتوقيع التلقائي)
    build_app(
      scheme: "TestCiApp",
      export_method: "ad-hoc" # أو "development" لو بتجرب بس
    )

    # رفع التطبيق على TestApp.io
    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"],
      app_id: "9QorGVmE7M"
    )
  end
end

