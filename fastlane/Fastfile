platform :ios do
  desc "Build and upload to TestApp.io"
  lane :beta do
    build_app(
      scheme: "TestCiApp",
      export_method: "development",
      xcargs: "-allowProvisioningUpdates" # <== âœ… Enables automatic profile generation
    )

    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"]
    )
  end
end
