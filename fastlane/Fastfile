default_platform(:ios)

platform :ios do
  desc "Build and upload app to TestApp.io"
  lane :beta do

    # تحميل الشهادات من Match (مع دعم GitHub Actions بدون تدخل يدوي)
    match(
      type: "adhoc",
      username: ENV["FASTLANE_USER"],
      git_url: "https://github.com/MohammedHamiid/ios-certificates.git",
      git_branch: "master",
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"]
    )

    # بناء التطبيق
    build_app(
      scheme: "TestCiApp",
      export_method: "adhoc"
    )

    # رفع التطبيق على TestApp.io (استخدم secret بدل ما تكتب التوكين هنا)
    upload_to_testappio(
      api_token: ENV["TESTAPPIO_API_TOKEN"],
      app_id: "9QorGVmE7M"
    )
  end
end
