default_platform(:ios)

platform :ios do
  desc "Build and upload to TestApp.io"
  lane :beta do
    puts "ğŸ” Using local AuthKey.p8 file"

    # Ø§ÙƒØªØ¨ Ø§Ù„Ù…Ù„Ù AuthKey.p8 Ù…Ù† Ø§Ù„Ù€ Secret
    File.write("fastlane/AuthKey.p8", ENV["APP_STORE_CONNECT_API_KEY"])

