default_platform(:ios)

platform :ios do
  desc "Push to TestApp.io"
  lane :beta do
    puts "ğŸ” Using uploaded AuthKey.p8 file from Jenkins"

    # 1. Ø¥Ø¹Ø¯Ø§Ø¯ Apple API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: ENV["APP_STORE_CONNECT_API_KEY_FILE"]
    )

    # 2. ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø´Ù‡Ø§Ø¯Ø§Øª Ù…Ù† Match
    match(
      type: "adhoc",
      api_key: api_key,
      git_url: "https://github.com/MohammedHamiid/ios-certificates.git",
      app_identifier: ["com.benhamid.TestCiApp"],
      readonly: false
    )

    # 3. Ø¨Ù†Ø§Ø¡ Ø§Ù„ØªØ·Ø¨ÙŠÙ‚
    build_app(scheme: "TestCiApp")

    # 4. Ø±ÙØ¹ .ipa Ø¹Ù„Ù‰ TestApp.io
    upload_to_testappio(
      api_token: "0db11f3c-d0d7-4b1c-8c76-8197063b74a5"
    )
  end
end
